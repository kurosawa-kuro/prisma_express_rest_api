{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ],
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}